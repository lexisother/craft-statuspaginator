{
    "name": "brik-digital/craft-statuspaginator",
    "description": "Periodically pings a Statuspaginator instance with version data.",
    "type": "craft-plugin",
    "require": {
        "php": ">=7.4",
        "craftcms/cms": "^3.0.0",
        "putyourlightson/craft-log-to-file": "^1.2"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "brikdigital\\statuspaginator\\": "src/"
        }
    },
    "extra": {
        "handle": "statuspaginator",
        "name": "statuspaginator",
        "developer": "Brik.digital",
        "documentationUrl": "",
        "class": "brikdigital\\statuspaginator\\Statuspaginator"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
